<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head.ejs') %>
    <link rel="stylesheet" href="/styles/styles.css" />
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-12 col-md-12 col-lg-12 pb-5" id="chat-area"></div>
        <div class="col-10 col-md-11 col-lg-11 p-2" id="msg-area">
          <input
            type="text"
            class="form-input chat-msg"
            id="chat-msg"
            placeholder="Enter your message"
          />
        </div>
        <div class="col-2 col-md-1 col-lg-1 p-3">
          <button class="send-msg">
            <i class="btn primary-btn">Submit</i>
          </button>
        </div>
      </div>
    </div>
    <script
      src="https://code.jquery.com/jquery-3.6.4.min.js"
      integrity="sha256-oP6HI9z1XaZNBrJURtCoUT5SUnxFr8s3BzRl+cbzUq8="
      crossorigin="anonymous"
    ></script>
    <script src="js/chatpage.js" type="text/javascript"></script>
  </body>
</html>
